{
  "name": "prepare-apprunnerr-action",
  "version": "0.1.3",
  "private": true,
  "description": "Preparing your App Runner before deployment",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "package:post": "ncc build lib/post-action.js --source-map --license licenses.txt -o dist/post",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run package:post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bervProject/prepare-apprunner-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@aws-sdk/client-apprunner": "^3.743.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vercel/ncc": "^0.38.3",
    "aws-sdk-client-mock": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
